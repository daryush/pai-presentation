<h1>Post</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Title</th>
            <td>{{ entity.title }}</td>
        </tr>
        <tr>
            <th>Content</th>
            <td>{{ entity.content }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('post') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('post_edit', { 'id': entity.id }) }}">
            Edit
        </a>
        <form action="{{ path('post_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
    <li>
        <h3>Add comment</h3>
        <form action="{{ path('comment_create') }}" method="post">
            {{ form_widget(comment_form) }}
            <button type="submit">Add comment</button>
        </form>
    </li>
    <li>
        <h3>Comments</h3>
        {% render "PAIBlogBundle:Comment:indexConnectedWithPost" with { 'postId' : entity.id } %}
    </li>
</ul>
